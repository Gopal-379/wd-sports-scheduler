<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="copyright" content="Â©Peddi Gopal">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/styles.css">
    <title><%= title %></title>
</head>
<body class="bg-slate-300">
    <div class="grid grid-cols-6">
        <div class="col-start-2 col-span-4">
            <%- include('header') %>
            <div class="mt-4 space-x-6">
                <a href="/sport" class="text-blue-500 hover:underline">
                    Go Back
                </a>
                <a href="/signout" class="text-blue-500 hover:underline">
                    Signout
                </a>
            </div>
            <div class="mt-3">
                <h1 class="text-4xl mb-4">
                    <%= title %>
                </h1>
                <% if (role === "admin") { %>
                    <div class="mt-4 space-x-6">
                        <a href="#" class="text-blue-600 hover:underline">
                            Edit
                        </a>
                        <a href="#" class="text-blue-600 hover:underline" onClick="deleteSport(<%= sport.id %>)">
                            Delete
                        </a>
                    </div>
                <% } %>
            </div>
            <div class="mt-2">
                <a href="session/<%= sport.id %>" class="text-sky-600 hover:underline">Create a new session</a><br>
                <a href="#" class="text-sky-600 hover:underline">View Previous Sessions</a>
            </div>
        </div>
    </div>
    <script>
        var token = document.querySelector('meta[name="csrf-token"]').getAttribute("content");
        function deleteSport(id) {
            fetch(`/sport/${id}`, {
                method: 'DELETE',
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({
                    "_csrf": token,
                })
            })
            .then((res) => {
                if (res.ok) {
                    window.location.replace('/sport');
                }
            })
            .catch((e) => console.log(e));
        }
    </script>
</body>
</html>