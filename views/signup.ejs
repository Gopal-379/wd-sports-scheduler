<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="copyright" content="Â©Peddi Gopal">
        <meta name="csrf-token" content="<%= csrfToken %>">
        <script src="https://cdn.tailwindcss.com"></script>
        <link rel="stylesheet" href="/css/styles.css">
        <title><%= title %></title>
    </head>
    <body>
        <div class="grid grid-cols-6">
            <div class="col-start-3 col-span-2">
                <%- include('header') %>
                <h6 class="py-4">Signup as a new admin or player</h6>
                <form action="/users" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="py-3">
                        <label for="firstName">First Name: </label>
                        <input type="text" name="firstName" class="border border-gray-300 text-gray-900 rounded p-2 w-full">
                    </div>
                    <div class="py-3">
                        <label for="lastName">Last Name: </label>
                        <input type="text" name="lastName" class="border border-gray-300 text-gray-900 rounded p-2 w-full">
                    </div>
                    <div class="py-3">
                        <label for="email">Email: </label>
                        <input type="email" name="email" class="border border-gray-300 text-gray-900 rounded p-2 w-full">
                    </div>
                    <div class="py-3">
                        <label for="password">Password: </label>
                        <input type="password" name="password" class="border border-gray-300 text-gray-900 rounded p-2 w-full">
                    </div>
                    <div class="flex py-3 justify-center space-x-2">
                        <button type="submit" name="submit" value="admin" class="text-white bg-green-600 hover:bg-green-900 font-medium rounded px-5 py-2">Admin</button> 
                        <button type="submit" name="submit" value="player" class="text-white bg-green-600 hover:bg-green-900 font-medium rounded px-5 py-2">Player</button> 
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>